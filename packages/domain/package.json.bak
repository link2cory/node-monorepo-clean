{
  "name": "band-app-api",
  "private": true,
  "description": "backend for band-app",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently 'yarn nexus:watch' 'yarn build:watch' 'yarn sls:watch'",
    "deploy": "NODE_ENV=production yarn sls:deploy",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "sls:deploy": "serverless deploy",
    "sls:offline": "serverless offline",
    "sls:watch": "nodemon --watch dist --exec 'yarn sls:offline'",
    "watch": "tsc -w",
    "nexus:reflect": "ts-node -r tsconfig-paths/register --transpile-only src/api",
    "nexus:watch": "nodemon --watch src/api -e ts --exec 'yarn nexus:reflect'"
  },
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "apollo-server-lambda": "^2.17.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "dynamoose": "dynamoose/dynamoose#master",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-scalars": "^1.2.7",
    "jsonwebtoken": "^8.5.1",
    "serverless-dotenv-plugin": "^3.0.0",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.6.0",
    "@types/serverless": "^1.72.6",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "serverless": "^2.2.0",
    "serverless-offline": "^6.7.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundersSoftware/band-app-api"
  },
  "bugs": {
    "url": "https://github.com/foundersSoftware/band-app-api/issues"
  }
}
